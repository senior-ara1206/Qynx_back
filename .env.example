# RPC URLs for transaction verification (investment, trading, purchase)
# For local testnet (Hardhat/Anvil/Ganache):
RPC_URL_BSC=http://127.0.0.1:8545
RPC_URL_ETH=http://127.0.0.1:8545

# Deposit addresses the backend uses to verify incoming transfers.
# Set to the address that receives funds on your local chain (e.g. first test account).
DEPOSIT_ADDRESS_BSC=0xYourLocalDepositAddress
DEPOSIT_ADDRESS_ETH=0xYourLocalDepositAddress

# Optional: MongoDB override
# MONGODB_URI=mongodb+srv://...

# QYNX mint: required for minting QYNX to user wallet on purchase/investment/trading (QR flow).
# Contract must expose mint(address to, uint256 amount). Minter key must have MINTER_ROLE.
QYNX_CONTRACT_ADDRESS=0xYourQynxTokenContractAddress
QYNX_MINTER_PRIVATE_KEY=0xYourMinterWalletPrivateKey

# QYNX tokens minted per 1 USD of deposit (investment, trading, purchase). Default 10.
QYNX_PER_USD=10

# Admin CSV export (must match frontend NEXT_PUBLIC_ADMIN_EXPORT_SECRET)
ADMIN_EXPORT_SECRET=admin123
